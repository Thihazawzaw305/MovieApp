<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/btnWishlist"
        android:layout_width="wrap_content"
        android:elevation="5dp"
        android:background="@drawable/background_wishlist"
        android:layout_marginEnd="@dimen/margin_medium_2"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="@dimen/margin_small"
            android:src="@drawable/ic_baseline_bookmark_border_black_24"
            android:tint="@color/white"/>
    </FrameLayout>




    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBannerShowCase"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/oppenheimer"/>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Watch Now"
            android:textSize="@dimen/text_regular_3x"
            android:textStyle="bold"
            android:drawablePadding="@dimen/margin_medium_2"
            android:padding="@dimen/margin_medium"
            android:background="@color/purple"
            android:textColor="@color/white"
            android:drawableTint="@color/white"
            android:drawableStart="@drawable/ic_baseline_play_arrow_black_24"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Play Tralier"
            android:drawablePadding="@dimen/margin_medium_2"
            android:textSize="@dimen/text_regular_3x"
            android:textStyle="bold"
            android:padding="@dimen/margin_medium"
            android:background="#65000000"
            android:textColor="@color/white"
            android:drawableTint="@color/white"
            android:drawableStart="@drawable/ic_baseline_play_circle_black_24"/>
    </LinearLayout>


</RelativeLayout>